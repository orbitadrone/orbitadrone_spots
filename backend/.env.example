PORT=3000

# Bunny credentials (server-side only)
BUNNY_LIBRARY_ID=000000
BUNNY_STREAM_API_KEY=your-stream-api-key
BUNNY_CDN_HOST=https://your-library-id.b-cdn.net

# Auth: require Firebase ID token from clients (recommended)
FIREBASE_AUTH_REQUIRED=true
# Provide Google credentials for firebase-admin (service account).
# Recommended options (pick ONE strategy in production):
# 1) Single JSON env var:
#    FIREBASE_SERVICE_ACCOUNT='{"type":"service_account","project_id":"...","client_email":"...","private_key":"-----BEGIN PRIVATE KEY-----\n..."}'
# 2) Split fields as separate env vars:
#    FIREBASE_PROJECT_ID=your-project-id
#    FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xyz@your-project-id.iam.gserviceaccount.com
#    FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"
# 3) Or set GOOGLE_APPLICATION_CREDENTIALS to point to a JSON file path when running locally:
#    GOOGLE_APPLICATION_CREDENTIALS=/absolute/path/to/serviceAccountKey.json
