{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "noEmit": true,
    "types": ["jest"],
    "typeRoots": ["./src/@types", "./node_modules/@types"],
    "skipLibCheck": true,
    "strict": false,
    "noImplicitAny": false
  },
  "include": [
    "App.tsx",
    "index.js",
    "app/**/*",
    "src/**/*",
    "__tests__/**/*.ts",
    "__tests__/**/*.tsx"
  ]
}
